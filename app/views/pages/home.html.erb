<div class="container">
<h1 class="mt-5">Dashboard</h1>
<h3 class="mt-5">My Bookings</h3>

<div class="list-group">
  <% current_user.bookings.each_with_index do |b,i| %>
    <% if i == 0 %>
      <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active ">
      <div class="d-flex">
      <% if b.offer.language == "JavaScript" %>
          <img class="show-language" src="https://i0.wp.com/blog.canadianwebhosting.com/wp-content/uploads/2018/04/javascript-logo.png?fit=587%2C330&ssl=1" />
        <% elsif b.offer.language == "Rails" %>
          <img class="show-language" src="https://rubyonrails.org/assets/images/opengraph.png">
        <% elsif b.offer.language =="Ruby" %>
          <img class="show-language ruby" src="data:image/png;base64,">
        <% else %>
          <img class="show-language" src="https://www.journalduweb.org/wp-content/uploads/2019/02/apprendre-html-et-css.jpg" />
        <% end %>
      </div>

      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><strong><%= b.offer.user.firstname%> <%= b.offer.user.lastname%></strong></h5>
        <small><%= b.offer.start_date %></small>
      </div>
      <p class="mb-1">Lieu de rendez-vous : <%= b.offer.address %>.</p>
      <small>Détails : <%= b.offer.description %></small>
    </a>
    <% else %>
    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><strong><%= b.offer.user.firstname%> <%= b.offer.user.lastname%></strong></h5>
        <small><%= b.offer.start_date %></small>
      </div>
      <p class="mb-1">Lieu de rendez-vous : <%= b.offer.address %>.</p>
      <small>Détails : <%= b.offer.description %></small>
    </a>
    <% end %>
  <% end %>
</div>
<h3 class="mt-3">My Offers</h3>
<% @users.each do |b| %>
    <%=b.firstname%>
<% end %>
<%= link_to "Go back to the list", offers_path %>
</div>
