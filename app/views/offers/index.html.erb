<h1>Offers#index</h1>
  <ul> <% @offers.each do |offer| %>
    <li> <%= link_to "#{offer.user.firstname} #{offer.user.lastname}", offer_path(offer) %> </li>
    <li> <%= offer.description %> </li>
    <li> <%= offer.price_day %> </li>
    <li> <%= offer.address %> </li>
    <li> <%= offer.start_date %> to <%= offer.end_date %>  </li>
    <% end %>
  </ul>

<%= link_to "New offer", new_offer_path if policy(Offer).new? %>

<p>Find me in app/views/offers/index.html.erb</p>
